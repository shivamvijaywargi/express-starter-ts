{
  "env": {
    "targets": {
      "node": 20
    }
  },
  "jsc": {
    "parser": {
      "syntax": "typescript"
    },
    // baseUrl and paths are important if using absoulte imports and they should match tsconfig.json
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "module": {
    "type": "commonjs"
  },
  "sourceMaps": "inline",
  "minify": true
}
